<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <FrameLayout
        android:id="@+id/map_picker_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Top Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FFFFFF"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        app:title="Agregar nueva dirección"
        app:titleTextColor="@android:color/black" />

    <!-- Address Bubble -->
    <TextView
        android:id="@+id/address_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/center_pin"
        android:layout_marginBottom="8dp"
        android:background="@drawable/address_bubble_background"
        android:padding="12dp"
        android:text="Moviendo mapa..."
        android:textColor="@android:color/white"
        android:visibility="gone" />

    <!-- Center Pin -->
    <ImageView
        android:id="@+id/center_pin"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="24dp" 
        android:src="@drawable/ic_pin_marker"
        android:contentDescription="Pin central" />

    <!-- Bottom Confirm FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_confirm_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="24dp"
        android:src="@drawable/ic_check"
        app:backgroundTint="#000000"
        app:tint="@android:color/white"
        android:contentDescription="Confirmar Ubicación" />

</RelativeLayout>
