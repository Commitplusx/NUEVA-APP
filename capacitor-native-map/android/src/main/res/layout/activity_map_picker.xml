<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/map_picker_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Top Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        app:title="Agregar nueva dirección"
        app:titleTextColor="@android:color/black" />

    <!-- Address Bubble -->
    <TextView
        android:id="@+id/address_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/center_pin"
        android:layout_marginBottom="8dp"
        android:background="@drawable/address_bubble_background"
        android:padding="12dp"
        android:text="Moviendo mapa..."
        android:textColor="@android:color/white"
        android:visibility="gone" />

    <!-- Center Pin -->
    <ImageView
        android:id="@+id/center_pin"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerInParent="true"
        android:src="@android:drawable/ic_dialog_map"
        android:contentDescription="Pin central" />

    <!-- Bottom Confirm Button -->
    <Button
        android:id="@+id/btn_confirm_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:text="Confirmar ubicación"
        android:backgroundTint="#4CAF50"
        android:textColor="@android:color/white" />

</RelativeLayout>
